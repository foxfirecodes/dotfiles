[user]
	name = foxfirecodes
	email = foxfirecodes@gmail.com

[rerere]
	enabled = true
[commit]
	gpgsign = true
[pull]
	rebase = false

[core]
	autocrlf = false
	pager = delta
[init]
	defaultBranch = main
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true

[includeIf "gitdir:~/.local/share/nvim/plugged/"]
	path = ~/.config/git/env/plugged.gitconfig
